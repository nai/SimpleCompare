<Window x:Class="WPFSimpleDCM.frmIgnores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="frmIgnores" Height="475" Width="442" Loaded="Window_Loaded">
    <Grid>
        <Label Height="28" Margin="17.5,12,0,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120">Folders</Label>
        <TextBox Margin="17.5,46,0,12" Name="txtFolders" HorizontalAlignment="Left" Width="187.5" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
        <Label Height="28" HorizontalAlignment="Right" Margin="0,12,70,0" Name="label2" VerticalAlignment="Top" Width="120">Files</Label>
        <TextBox HorizontalAlignment="Right" Margin="0,46,12,12" Name="txtFiles" Width="177" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
        <Button Height="27.25" Margin="0,12.5,59,0" Name="btnSave" VerticalAlignment="Top" HorizontalAlignment="Right" Width="48.75" Click="btnSave_Click">Save</Button>
        <Button Height="27.25" HorizontalAlignment="Right" Margin="0,12.5,8.75,0" Name="btnCancel" VerticalAlignment="Top" Width="43.75" Click="btnCancel_Click">Cancel</Button>
    </Grid>
</Window>
